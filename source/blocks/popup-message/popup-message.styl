.popup-message
  display none
  width 100%
  height 100%
  background #444444
  opacity 0.9
  position fixed
  top 0
  left 0
  z-index 1000

  &_invisible
    display none
  &_visible
    display block

  &__content
    position absolute
    border-radius 0.222rem
    width 24rem
    height 5rem
    padding 2rem
    top calc(50% - 2.5rem)
    left calc(50% - 12rem)
    color black
    background #CCCCCC

  &__text
    padding-bottom 1rem