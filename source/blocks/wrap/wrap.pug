include ../standard-button/standard-button.pug
include ../slider-with-pop-up/slider-with-pop-up.pug
include ../field/field.pug
include ../popup-message/popup-message.pug

mixin wrap()
    main.wrap
        header.wrap__header
            h1.wrap__header-title Conway's Game Of Life
        .wrap__controls
            .wrap__control-item
                | Высота (5 - 100):
            .wrap__control-item
                input.field-height.js-field-height(type="number", value="50", min="5", max="100")
            .wrap__control-item
                | Ширина (5 - 100):
            .wrap__control-item
                input.field-width.js-field-width(type="number", value="50", min="5", max="100")
        .wrap__controls
            .wrap__control-item
                | Скорость:
            .wrap__control-item.wrap__control-item_size_big
                +slider-with-pop-up({min: 1, max: 10, step: 1, value: 10, range: "", theme: "orange"})
            .wrap__control-item
                | Поколение:
            .wrap__control-item
                input.generation.js-generation(type="number", value="1", disabled)
        .wrap__controls
            .wrap__control-item
                +standard-button({text:"создать", color:"green", size:"", effect:"", activeStatus:"", jsClass:" js-create-universe"})
            .wrap__control-item
                +standard-button({text:"стереть", color:"red", size:"", effect:"", activeStatus:"", jsClass:" js-clear-universe"})
            .wrap__control-item
                +standard-button({text:"старт", color:"green", size:"", effect:"", activeStatus:"", jsClass:" js-start-game"})
            .wrap__control-item
                +standard-button({text:"стоп", color:"red", size:"", effect:"", activeStatus:"", jsClass:" js-stop-game"})
            .wrap__control-item
                +standard-button({text:"1 шаг", color:"green", size:"", effect:"", activeStatus:"inactive", jsClass:" js-step"})
            .wrap__control-item
                a.wrap__link(href="test.html")
                    +standard-button({text:"тесты", color:"red", size:"", effect:"", activeStatus:"inactive"})
        article.wrap__content.js-wrap__content
            +field({width: 3, height: 3})
        footer.wrap__footer Copyright @ & Designed by Sergey Karbyshev
    +popup-message()