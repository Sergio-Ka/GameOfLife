.wrap
  background #FFFFFF
  height 100%

  &__header
    flex 0 0 auto
    display flex
    flex-wrap wrap
    justify-content center
    background #111111
    color #FFFFFF

  &__controls
    flex 0 0 auto
    display flex
    flex-wrap wrap
    justify-content center
    padding-top 25px
    background #111111

  &__control-item
    margin 0.625rem

    &_size_big
      width 9.8125rem

  &__content
    flex 1 0 auto
    display flex
    justify-content center
    width 100%
    background #FFFFFF

  &__footer
    flex 0 0 auto
    background #FFFFFF
    color #111111
    text-align center
    font-weight bold
    border-top 0.125rem solid #111111
    padding 1.25rem 0